<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="css/desc.css" type="text/css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,300,0,0" />
</head>
<body>
    <div id="content">

        <header>

            <div id="icon">
                <h1><span id="sizes" class="material-symbols-outlined">steps</span>GLAMFEET</h1>
            </div>

            <div id="nav">
                <div><a href="/home"><h2 id="navicons">Home</h2></div>
                <div><a href="/store/Men"><h2 id="navicons">Men</h2></a></div>
                <div><a href="/store/Women"><h2 id="navicons">Women</h2></a></div>
                <div><a href="/store/Kids"><h2 id="navicons">Kids</h2></a></div>
                <div><h2><a href="/favs"><span id="sizes" class="material-symbols-outlined">favorite</span></a></h2></div>
                <div><h2><span id="sizes" class="material-symbols-outlined">shopping_cart</span></h2></div>
                <div><h2><span id="sizes" class="material-symbols-outlined">account_circle</span><div id="username"><%=user.Firstname%></div></h2></div>
            </div>

        </header>

        <div id="main">

            <div id="desc">

                <div id="photo">
                    <img id="mainimg" src=<%=item.Image%>>
                </div>
                <div id="dets">
                    <div id="name"><%=item.Name%></div>
                    <div id="brand"><div id="text"><%=item.Brand%></div></div>
                    <div id="price"><div id="text">MRP : &#8377;<%=item.Price%></div></div>
                    <div id="size"><div id="text">Size :</div><input type="number" min="1" max="15"></div>
                    
                    <div id="cart">
                        <form method="post" action="/cart?_method=put">
                            <button name="shoe" type="submit" id="addtocart" value=<%=item.id%>>Add to Cart</button>
                        </form>
                    </div>
                    <div id="favs">
                        <form method="post" action="/favs?_method=put">
                            <button name="shoe" type="submit" id="favourite" value=<%=item.id%>>Favourite</button>
                        </form>
                    </div>
                    <div id="data">
                        <p><%=item.Description%></p>
                    </div>
                </div>

            </div>

            <div id="items">
                <div id="head"><h1>You Might Also Like</h1></div>
                <div id="stems">
                    <%Data.forEach(function(i){%>
                        <div id="shoes">
                            <a href="/desc/<%=i.id%>"><img id="sums" src=<%=i.Image%>></a>
                            <p id="shp"><%=i.Name%></p>
                            <p id="shp">MRP : &#8377;<%=i.Price%></p>
                        </div>
                    <%})%>
                </div>

            </div>

        </div>

       

        <footer>

        </footer>

    </div>

    <script>

    </script>
    
</body>
</ht