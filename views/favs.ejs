<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="css/favs.css" type="text/css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,300,0,0" />
</head>
<body>
    <div id="content">

        <header>

            <div id="icon">
                <h1><span id="sizes" class="material-symbols-outlined">steps</span>GLAMFEET</h1>
            </div>

            <div id="nav">
                <div><h2 id="navicons">Home</h2></div>
                <div><h2 id="navicons">Men</h2></div>
                <div><h2 id="navicons">Women</h2></div>
                <div><h2 id="navicons">Kids</h2></div>
                <div><h2><span id="sizes" class="material-symbols-outlined">favorite</span></h2></div>
                <div><h2><span id="sizes" class="material-symbols-outlined">shopping_cart</span></h2></div>
                <div><h2><span id="sizes" class="material-symbols-outlined">account_circle</span></h2></div>
            </div>

        </header>

        <div id="main">
            <div id="text"><h1>Favourites</h1></div>
            <div id="items">

                <%items.forEach(function(i){%>
                    <div id="shoe">
                        <div id="photo"><img src=<%=i.Image%>></div>
                        <div id="dets">
                            <div id="moredets">
                                <p><h2><%=i.Name%></h2></p>
                                <p><h2><%=i.Brand%></h2></p>
                                <p><h2>MRP : &#8377;<%=i.Price%></h2></p>
                                <button type="submit">Add to Cart</button>
                            </div>
                            <div id="close">
                                <form method="post" action="/favs?_method=delete">
                                    <button id="sym" type="submit" name="shoe" value=<%=i._id%>><span id="cls" class="material-symbols-outlined">close</span></button>
                                </form>
                            </div>
                        </div>
                    </div>
                <%})%>
                
            </div>
        </div>

        <footer>

        </footer>

    </div>

    <script>

    </script>
    
